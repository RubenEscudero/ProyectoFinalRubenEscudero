        loadAnimationFromFile(filenames, 0.1f, true);
        
		facingAngle = 270;
		setBoundaryPolygon(8);
		setSize(40, 40);
		
		setSpeed(300);
		accelerateAtAngle(90);
		setMotionAngle(MathUtils.random(90));
		boundToWorld();
	}
	
